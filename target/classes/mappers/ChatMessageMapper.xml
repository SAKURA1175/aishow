<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxzd.study.mapper.ChatMessageMapper">

    <resultMap id="BaseResultMap" type="com.xxzd.study.domain.ChatMessage">
        <id property="id" column="id"/>
        <result property="sessionId" column="session_id"/>
        <result property="role" column="role"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, session_id, role, content, create_time
    </sql>

    <insert id="insert" parameterType="com.xxzd.study.domain.ChatMessage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO chat_message (session_id, role, content, create_time)
        VALUES (#{sessionId}, #{role}, #{content}, NOW())
    </insert>

    <select id="selectBySessionId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM chat_message
        WHERE session_id = #{sessionId}
        ORDER BY create_time ASC
    </select>

    <delete id="deleteBySessionId">
        DELETE FROM chat_message WHERE session_id = #{sessionId}
    </delete>
</mapper>
